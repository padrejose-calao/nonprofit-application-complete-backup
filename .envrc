# Direnv configuration for automatic environment setup
# This file auto-loads when you enter the directory

# Node.js version
export NODE_VERSION=20

# Development environment
export NODE_ENV=development
export REACT_APP_ENV=development

# Performance optimizations
export NODE_OPTIONS="--max-old-space-size=8192"

# Enable source maps
export GENERATE_SOURCEMAP=true

# GitHub integration
export GITHUB_TOKEN="${GITHUB_TOKEN:-}"
export GH_TOKEN="${GITHUB_TOKEN:-}"

# Netlify integration
export NETLIFY_AUTH_TOKEN="${NETLIFY_AUTH_TOKEN:-}"
export NETLIFY_SITE_ID="${NETLIFY_SITE_ID:-}"

# Security
export SNYK_TOKEN="${SNYK_TOKEN:-}"

# Custom PATH additions
PATH_add ./node_modules/.bin
PATH_add ./scripts

# Load local overrides if they exist
[[ -f .envrc.local ]] && source .envrc.local

# Show status
echo "ðŸš€ Development environment loaded!"
echo "   Node: $(node -v)"
echo "   npm: $(npm -v)"
echo "   GitHub: $(gh auth status 2>&1 | grep -q "Logged in" && echo "âœ“ Authenticated" || echo "âœ— Not authenticated")"
echo "   Netlify: $(netlify status 2>&1 | grep -q "Logged in" && echo "âœ“ Connected" || echo "âœ— Not connected")"